---

<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/x-icon" href="/rc-favicon.ico" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Rachel Chen | Product Designer + Engineer</title>
	<meta name="theme-color" content="#fafcfd" />
	<style is:global>
		@font-face {
			font-family: 'Geist';
			src: url('/fonts/geist-sans-latin.woff2') format('woff2');
			font-weight: 100 900;
			font-display: swap;
		}
		@font-face {
			font-family: 'Geist Mono';
			src: url('/fonts/geist-mono-latin.woff2') format('woff2');
			font-weight: 100 900;
			font-display: swap;
		}
		@font-face {
			font-family: 'Crimson Pro';
			src: url('/fonts/crimson-pro-latin.woff2') format('woff2');
			font-weight: 200 900;
			font-display: swap;
		}
		@font-face {
			font-family: 'Crimson Pro';
			src: url('/fonts/crimson-pro-italic-latin.woff2') format('woff2');
			font-weight: 400;
			font-style: italic;
			font-display: swap;
		}
		@font-face {
			font-family: 'tiemposText';
			src: url('/fonts/tiempos-text.otf') format('opentype');
			font-weight: 400;
			font-display: swap;
		}
		@font-face {
			font-family: 'tiemposText';
			src: url('/fonts/tiempos-text-italic.otf') format('opentype');
			font-weight: 400;
			font-style: italic;
			font-display: swap;
		}

		:root {
			--primary: #e95a2c;
			--foreground: #171717;
			--muted: #a3a3a3;
			--background: #fafcfd;
			--border: rgba(23,23,23,0.1);
			--font-sans: 'Geist', system-ui, sans-serif;
			--font-mono: 'Geist Mono', monospace;
			--font-serif: 'tiemposText', 'Crimson Pro', Georgia, serif;
		}

		* { margin: 0; padding: 0; box-sizing: border-box; }
		html { scroll-behavior: smooth; }
		body {
			font-family: var(--font-sans);
			background: var(--background);
			color: var(--foreground);
			-webkit-font-smoothing: antialiased;
			overflow-x: hidden;
		}
		a { color: inherit; text-decoration: none; }
		img { display: block; max-width: 100%; height: auto; }
		button { font-family: inherit; cursor: pointer; border: none; background: none; }

		/* ─── NAV ─── */
		.nav {
			display: flex;
			justify-content: center;
			padding: 0 24px;
			height: 64px;
			align-items: center;
			border-bottom: 1px solid var(--border);
			position: sticky;
			top: 0;
			background: var(--background);
			z-index: 100;
		}
		.nav-inner {
			max-width: 1800px;
			width: 100%;
			display: flex;
			align-items: center;
			gap: 24px;
		}
		.nav-logo {
			display: flex;
			gap: 16px;
			align-items: baseline;
			flex-shrink: 0;
		}
		.nav-logo-name {
			font-family: var(--font-sans);
			font-size: 15px;
			font-weight: 500;
			color: var(--foreground);
			white-space: nowrap;
		}
		.nav-logo-role {
			font-family: var(--font-sans);
			font-size: 15px;
			color: var(--muted);
			white-space: nowrap;
		}
		.nav-links {
			display: flex;
			gap: 32px;
			align-items: center;
			margin-left: auto;
		}
		.nav-link {
			font-family: var(--font-sans);
			font-size: 15px;
			color: var(--muted);
			cursor: pointer;
			transition: color 0.2s;
			white-space: nowrap;
		}
		.nav-link:hover { color: var(--primary); }
		.nav-link.active { color: var(--primary); }
		.rachellm-btn {
			display: flex;
			align-items: center;
			gap: 8px;
			font-family: var(--font-mono);
			font-size: 15px;
			color: var(--muted);
			opacity: 0.5;
			transition: opacity 0.2s, color 0.2s;
			cursor: pointer;
			padding: 8px;
			border-radius: 999px;
			margin-right: -8px;
		}
		.rachellm-btn:hover { opacity: 1; color: var(--primary); }
		.rachellm-btn svg { flex-shrink: 0; }
		.rachellm-label { text-transform: uppercase; font-size: 15px; }

		/* ─── LAYOUT ─── */
		.layout {
			display: flex;
			height: calc(100dvh - 64px);
			overflow: hidden;
		}
		.main-scroll {
			flex: 1;
			overflow-y: auto;
			transition: all 0.2s ease-in-out;
		}
		.page-content {
			display: none;
		}
		.page-content.active {
			display: block;
		}

		/* ─── WORK HERO ─── */
		.work-hero {
			display: flex;
			padding: 0 24px;
			gap: 24px;
			max-width: 1800px;
			margin: 0 auto;
			min-height: calc(100vh - 120px);
			align-items: flex-start;
			padding-top: 80px;
		}
		.hero-left {
			flex: 1;
			max-width: 480px;
		}
		.hero-title {
			font-family: var(--font-serif);
			font-size: clamp(32px, 3.5vw, 44px);
			font-weight: 400;
			line-height: 1.2;
			color: var(--foreground);
			letter-spacing: -0.01em;
		}
		.hero-title em {
			font-family: 'Crimson Pro', Georgia, serif;
			font-style: italic;
		}
		.hero-right {
			flex: 1;
			padding-top: 12px;
		}
		.exp-row {
			display: grid;
			grid-template-columns: 48px 1fr 1fr;
			gap: 12px;
			padding: 6px 0;
			font-size: 15px;
			line-height: 1.5;
		}
		.exp-year { color: var(--muted); }
		.exp-company { color: var(--foreground); font-weight: 500; }
		.exp-role { color: var(--muted); }

		/* ─── PROJECT GRID ─── */
		.project-grid {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 12px;
			padding: 0 24px 80px;
			max-width: 1800px;
			margin: 0 auto;
			margin-top: -200px;
		}
		.project-card {
			position: relative;
			border-radius: 12px;
			overflow: hidden;
			cursor: pointer;
			border: 1px solid var(--border);
			transition: transform 0.2s, box-shadow 0.2s;
		}
		.project-card:hover {
			box-shadow: 0 8px 30px rgba(0,0,0,0.08);
		}
		.card-visual {
			position: relative;
			aspect-ratio: 8/5;
			overflow: hidden;
			display: flex;
			align-items: center;
			justify-content: center;
		}
		.card-bg {
			position: absolute;
			inset: 0;
		}
		.card-title-overlay {
			position: relative;
			z-index: 1;
			font-family: var(--font-serif);
			font-size: clamp(20px, 2vw, 28px);
			font-weight: 400;
			color: #fff;
			text-shadow: 0 1px 4px rgba(0,0,0,0.1);
			padding: 24px;
			align-self: flex-end;
			width: 100%;
		}
		.card-title-dark {
			color: var(--foreground);
			text-shadow: none;
		}

		/* Hover overlay */
		.card-hover-overlay {
			position: absolute;
			inset: 0;
			display: flex;
			align-items: center;
			justify-content: center;
			opacity: 0;
			z-index: 2;
			transition: opacity 0.25s;
		}
		.project-card:hover .card-hover-overlay { opacity: 1; }
		.view-btn {
			display: inline-flex;
			align-items: center;
			gap: 6px;
			padding: 8px 16px;
			background: var(--primary);
			color: #fff;
			border-radius: 999px;
			font-family: var(--font-mono);
			font-size: 12px;
			font-weight: 500;
			letter-spacing: 0.04em;
			text-transform: uppercase;
			transform: translateY(4px);
			transition: transform 0.25s;
		}
		.project-card:hover .view-btn { transform: translateY(0); }

		/* Card meta */
		.card-meta {
			display: flex;
			justify-content: space-between;
			align-items: baseline;
			padding: 10px 4px 0;
			gap: 8px;
		}
		.card-subtitle {
			font-size: 15px;
			color: var(--foreground);
		}
		.card-info {
			font-family: var(--font-mono);
			font-size: 12px;
			color: var(--muted);
			letter-spacing: 0.02em;
			white-space: nowrap;
			flex-shrink: 0;
		}

		/* ─── OpenAI gradient ─── */
		.grad-openai { background: linear-gradient(135deg, #f0a05a 0%, #e8937a 25%, #d9919e 50%, #c49cc8 75%, #b5a5d8 100%); }
		.grad-poker { background: linear-gradient(160deg, #101c33 0%, #152447 50%, #1a3060 100%); }
		.grad-alexa { background: linear-gradient(180deg, #0b1525 0%, #0e1e3a 50%, #142d55 100%); }
		.grad-1pw { background: linear-gradient(135deg, #0c1628 0%, #111d35 50%, #1a2d52 100%); }
		.grad-figma { background: linear-gradient(135deg, #fde4ea 0%, #f5c0d0 50%, #f09db5 100%); }
		.grad-earth { background: linear-gradient(135deg, #e8e8ee 0%, #d8d8e5 50%, #c5c5db 100%); }

		/* ─── Mockup components inside cards ─── */
		.mockup-container { position: relative; z-index: 1; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; }

		/* PokerGPT: chat form */
		.poker-mockup {
			width: 280px;
			background: #fff;
			border-radius: 16px;
			padding: 20px;
			box-shadow: 0 8px 40px rgba(0,0,0,0.12);
			font-size: 13px;
			color: #333;
		}
		.poker-mockup-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 16px;
		}
		.poker-mockup-header span { color: #666; }
		.poker-template-btn {
			font-size: 11px;
			color: var(--primary);
			border: 1px solid var(--primary);
			border-radius: 6px;
			padding: 4px 10px;
			background: #fff;
		}
		.poker-field {
			font-size: 12px;
			line-height: 1.8;
			color: #555;
		}
		.poker-field .placeholder { color: var(--primary); }
		.poker-villain { margin-top: 12px; padding-top: 12px; border-top: 1px solid #eee; color: #999; font-size: 12px; }
		.poker-send { text-align: right; margin-top: 8px; color: #ccc; }
		.poker-send svg { display: inline-block; }

		/* Alexa: wave + text */
		.alexa-content {
			position: relative;
			z-index: 1;
			width: 100%;
			padding: 24px;
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			height: 100%;
		}
		.alexa-wave {
			width: 100%;
			height: 80px;
			margin-bottom: 24px;
		}
		.alexa-wave svg { width: 100%; height: 100%; }
		.alexa-text {
			font-family: var(--font-serif);
			font-size: 22px;
			line-height: 1.3;
		}
		.alexa-text .cyan { color: #38bdf8; }
		.alexa-text .white { color: rgba(255,255,255,0.7); }

		/* 1Password: login form */
		.pw-mockup {
			width: 260px;
			background: #fff;
			border-radius: 16px;
			padding: 20px;
			box-shadow: 0 8px 40px rgba(0,0,0,0.12);
		}
		.pw-label { font-size: 13px; color: #555; margin-bottom: 6px; }
		.pw-field {
			display: flex;
			align-items: center;
			gap: 8px;
			padding: 10px 12px;
			background: #f8f8f8;
			border-radius: 10px;
			margin-bottom: 14px;
			font-size: 13px;
			color: #333;
		}
		.pw-icon {
			width: 22px; height: 22px;
			background: #0066ff;
			border-radius: 50%;
			margin-left: auto;
			flex-shrink: 0;
		}
		.pw-btn {
			width: 100%;
			padding: 11px;
			background: #0066ff;
			color: #fff;
			border-radius: 10px;
			font-size: 13px;
			font-weight: 500;
			text-align: center;
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 6px;
		}

		/* ─── RACHELLM DRAWER ─── */
		.drawer {
			width: 0;
			overflow: hidden;
			border-left: 0px solid var(--border);
			transition: width 0.3s ease, border-left-width 0.3s ease;
			display: flex;
			flex-direction: column;
			flex-shrink: 0;
			background: var(--background);
		}
		.drawer.open {
			width: 360px;
			border-left-width: 1px;
		}
		.drawer-header {
			display: flex;
			align-items: center;
			justify-content: space-between;
			padding: 14px 20px;
			border-bottom: 1px solid var(--border);
			min-height: 56px;
			gap: 8px;
		}
		.drawer-title {
			font-family: var(--font-mono);
			font-size: 14px;
			font-weight: 500;
			display: flex;
			align-items: center;
			gap: 8px;
			white-space: nowrap;
		}
		.drawer-info {
			width: 16px; height: 16px;
			border-radius: 50%;
			border: 1.5px solid var(--muted);
			display: inline-flex;
			align-items: center;
			justify-content: center;
			font-size: 10px;
			color: var(--muted);
		}
		.drawer-actions { display: flex; gap: 10px; align-items: center; }
		.toggle {
			width: 36px; height: 20px;
			background: #ddd;
			border-radius: 10px;
			position: relative;
			cursor: pointer;
			transition: background 0.2s;
		}
		.toggle.on { background: var(--primary); }
		.toggle::after {
			content: '';
			position: absolute;
			top: 2px; left: 2px;
			width: 16px; height: 16px;
			background: #fff;
			border-radius: 50%;
			transition: transform 0.2s;
		}
		.toggle.on::after { transform: translateX(16px); }
		.close-btn {
			width: 28px; height: 28px;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 18px;
			color: var(--muted);
			border-radius: 6px;
			transition: background 0.2s, color 0.2s;
		}
		.close-btn:hover { background: #f0f0f0; color: var(--foreground); }
		.drawer-body {
			flex: 1;
			overflow-y: auto;
			padding: 20px;
			display: flex;
			flex-direction: column;
		}
		.drawer-suggestions { margin-top: auto; }
		.drawer-suggestions h3 {
			font-size: 16px;
			font-weight: 500;
			margin-bottom: 14px;
		}
		.suggestion {
			display: flex;
			gap: 10px;
			padding: 8px 0;
			cursor: pointer;
			color: var(--muted);
			font-size: 14px;
			transition: color 0.2s;
		}
		.suggestion:hover { color: var(--foreground); }
		.suggestion .arrow { color: var(--primary); flex-shrink: 0; }
		.drawer-input-wrap {
			padding: 14px 20px;
			border-top: 1px solid var(--border);
		}
		.drawer-input-box {
			display: flex;
			align-items: center;
			gap: 8px;
			padding: 10px 14px;
			border: 1px solid #e0e0e0;
			border-radius: 10px;
			transition: border-color 0.2s;
		}
		.drawer-input-box:focus-within { border-color: var(--primary); }
		.drawer-input-box input {
			flex: 1;
			border: none;
			outline: none;
			font-family: var(--font-sans);
			font-size: 14px;
			background: transparent;
			color: var(--foreground);
		}
		.drawer-input-box input::placeholder { color: #bbb; }
		.send-btn { color: #ccc; display: flex; transition: color 0.2s; }
		.send-btn:hover { color: var(--primary); }

		/* ─── ABOUT ─── */
		.about-wrap {
			display: flex;
			flex-direction: column;
			padding: 0 24px;
			gap: 12px;
			max-width: 1800px;
			margin: 0 auto;
			padding-top: 48px;
		}
		.about-top {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 24px;
		}
		.about-title {
			font-family: var(--font-serif);
			font-size: clamp(32px, 3.5vw, 44px);
			font-weight: 400;
			line-height: 1.2;
			max-width: 500px;
		}
		.about-body {
			font-size: 15px;
			line-height: 1.7;
			color: #555;
			max-width: 500px;
		}
		.about-body p { margin-bottom: 12px; }
		.about-body a { color: var(--foreground); font-weight: 600; border-bottom: 1px solid var(--foreground); }
		.about-body ul { list-style: disc; padding-left: 20px; margin-bottom: 12px; }
		.about-body li { padding: 2px 0; }
